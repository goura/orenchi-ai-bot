# Discord Bot Token - Required to connect to Discord
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# OpenRouter API Key - Required for AI service
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Discord info - required to deploy slash commands
DISCORD_CLIENT_ID=012xxxxxxxxx
DISCORD_GUILD_ID=yyyyyyyyyyyy

# Enable public channel processing without mentions (optional)
# Set to true to allow the bot to process messages with no mentions in public channels
# RESPOND_TO_PUBLIC_NO_MENTION=true
